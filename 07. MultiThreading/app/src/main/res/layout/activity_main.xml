<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Display textview  -->

    <ImageView
        android:layout_width="wrap_content"
        b
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="25sp" />

    <!-- Thread -->
    <Button
        android:id="@+id/btnThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onMultithreading"
        android:text="@string/thread" />

    <!-- Runnable -->

    <Button
        android:id="@+id/btnRunnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onMultithreading"
        android:text="@string/runnable" />

    <!-- Async Task  -->
    <Button
        android:id="@+id/btnAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onMultithreading"
        android:text="@string/asnctask" />


    <!-- Event Bus -->
    <Button
        android:id="@+id/btnEventBus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onMultithreading"
        android:text="EventBus"/>

    <!-- Event Bus -->



</LinearLayout>