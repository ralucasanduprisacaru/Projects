<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnNtaiveHttp"
            android:textColor="@color/black"
            android:text="Use Native Http"
            android:onClick="makeCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnOkHttpSymc"
            android:textColor="@color/black"
            android:onClick="makeCall"
            android:text="Use OkHttp sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <Button
            android:id="@+id/btnOkHttpASymc"
            android:textColor="@color/black"
            android:onClick="makeCall"
            android:text="Use OkHttp Async"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnRetrofitSync"
            android:textColor="@color/black"
            android:onClick="makeCall"
            android:text="Use Retrofit Sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnRetrofitAsync"
            android:textColor="@color/black"
            android:onClick="makeCall"
            android:text="Use Retrofit Async"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</LinearLayout>